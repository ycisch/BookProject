                <td><a class="layui-btn" onclick="x_admin_show('查看订单','${pageContext.request.contextPath}/BookServlet?opr=addbook')">进入查看</a></td>
                <td>${orderList.money}</td>
                <td>${orderList.user.username}</td>
                <td>${orderList.ctdate}</td>
                <td class="td-manage">
                    <a onclick="member_stop(this,'10001')" href="javascript:;"  title="启用">
                        <i class="layui-icon">&#xe601;</i>
                    </a>
                    <a title="编辑"  onclick="x_admin_show('编辑','${pageContext.request.contextPath}/OrderServlet?opr=updateto&orderid=${orderList.orderId}')" href="javascript:;">
                        <i class="layui-icon">&#xe642;</i>
                    </a>
                    <a title="删除" onclick="member_del(this,'要删除的id')" href="javascript:;">
                        <i class="layui-icon">&#xe640;</i>
                    </a>
                </td>
            </tr>
        </c:forEach>
